<?xml version="1.0" encoding="UTF-8"?>


<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:infinispan:config:5.1 http://www.infinispan.org/schemas/infinispan-config-5.1.xsd"
	xmlns="urn:infinispan:config:5.1">

	<global>
		<transport>
			<properties>
				<property name="configurationFile" value="resource/config/jgroups-tcp.xml" />
			</properties>
		</transport>
	</global>

	<default>
		<clustering mode="distribution">
			<l1 enabled="false" />
			<hash numOwners="2" />
			<sync />
		</clustering>
	</default>

	<namedCache name="persistentCache">
		<loaders shared="true" preload="true">
			<loader class="org.infinispan.loaders.remote.RemoteCacheStore">
				<properties>
					<property name="remoteCacheName" value="default" />
					<property name="hotRodClientPropertiesFile" value="resource/config/hotrod-client.properties" />
				</properties>
			</loader>
		</loaders>
	</namedCache>

</infinispan>
